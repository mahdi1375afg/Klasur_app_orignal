<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.AssignController">


    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <MenuButton fx:id="menuBar" mnemonicParsing="false" text="Menü">
                <items>
                    <MenuItem fx:id="menuButtonStartPage" mnemonicParsing="false" onAction="#switchToStartPage" text="Startseite" />
                    <MenuItem fx:id="menuButtonTaskOverview" mnemonicParsing="false" onAction="#switchToTaskOverview" text="Aufgabenübersicht" />
                    <MenuItem fx:id="menuButtonAddExam" mnemonicParsing="false" onAction="#switchToExamPage" text="Klausur erstellen" />
                    <MenuItem fx:id="menuButtonExamCollection" mnemonicParsing="false" onAction="#switchToExamOverview" text="Klausurensammlung" />
                    <MenuItem fx:id="menuButtonLogout" mnemonicParsing="false" onAction="#logout" text="Logout" />
                </items>
            </MenuButton>

            <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                <Text style="-fx-font-size: 24;" text="Zuordnen Aufgabe erstellen" />
            </HBox>
        </HBox>
    </top>



    <center>
        <ScrollPane fitToWidth="true" BorderPane.alignment="CENTER">
            <VBox fx:id="mainVBox" alignment="TOP_CENTER" spacing="15">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>


                <TextField fx:id="textFieldQuestion" maxWidth="564.0" prefHeight="43.0" prefWidth="564.0" promptText="Frage eingeben">
                    <font>
                        <Font size="20.0" />
                    </font></TextField>

                <VBox fx:id="answerContainer" spacing="10"> <!-- Container für Antwortfelder (dynamisch erstellbar) -->

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <TextField fx:id="answer1TextField" prefHeight="60.0" prefWidth="370.0" promptText="Antwort 1">
                            <font>
                                <Font size="15.0" />
                            </font></TextField>
                  <TextField fx:id="solution1TextField" prefHeight="60.0" prefWidth="370.0" promptText="Lösung 1">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
                    </HBox>


                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <TextField fx:id="answer2TextField" prefHeight="60.0" prefWidth="370.0" promptText="Antwort 2">
                            <font>
                                <Font size="15.0" />
                            </font></TextField>
                  <TextField fx:id="solution2TextField" prefHeight="60.0" prefWidth="370.0" promptText="Lösung 2">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </TextField>
                    </HBox>

                </VBox>

            </VBox>
        </ScrollPane>

    </center>


    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="20" left="10" right="10" top="10" />
            </padding>
            <Button fx:id="addAnswerButton" onAction="#addAnswerField" text="Antwort hinzufügen" />
            <Button fx:id="removeAnswerButton" onAction="#removeLastAnswerField" text="Antwort löschen" />
            <Button fx:id="savetButton" onAction="#saveAndSwitchToStartPage" text="Speichern" />
        </HBox>
    </bottom>


</BorderPane>
